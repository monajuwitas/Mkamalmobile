<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.mkamal.mkamalmobile.fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1.3"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/im_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/client"
        />
    <TextView
        android:id="@+id/namaclient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="28dp"
        android:textColor="@android:color/white"
        android:text="nama client"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/deskripsiclient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20dp"
        android:textColor="#f4b006"
        android:text="Client Miko Kamal"
        android:textAlignment="center"
        />

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:id="@+id/linformasi"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <RelativeLayout
                    android:id="@+id/rljudul"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="Infomasi Client"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlnama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbnama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Nama"/>
                    <TextView
                        android:id="@+id/ttnama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15dp"
                        android:layout_toRightOf="@id/lbnama"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/isinamaclient"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Nama Cient"
                        android:layout_toRightOf="@id/ttnama"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlalamat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbalamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15dp"
                        android:text="Alamat"/>
                    <TextView
                        android:id="@+id/ttalamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15dp"
                        android:layout_toRightOf="@id/lbalamat"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/isialamatclient"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Jalan bhbhbhb."
                        android:layout_toRightOf="@id/ttalamat"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Email"/>
                    <TextView
                        android:id="@+id/ttemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15dp"
                        android:layout_toRightOf="@id/lbemail"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/isiemailclient"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="gmail.com"
                        android:layout_toRightOf="@id/ttemail"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlnohp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbnohp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="No HP"/>
                    <TextView
                        android:id="@+id/ttnohp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15dp"
                        android:layout_toRightOf="@id/lbnohp"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/isinohpclient"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="08867655646"
                        android:layout_toRightOf="@id/ttnohp"
                        />
                </RelativeLayout>
            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>

