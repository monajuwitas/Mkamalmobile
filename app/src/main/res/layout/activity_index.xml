<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="id.co.mkamal.mkamalmobile.activity_client.IndexActivity">
<ImageView
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
<RelativeLayout
    android:background="@drawable/backgroundindex"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    >
    <ImageView
        android:id="@+id/logomkamal"
        android:src="@drawable/aa"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <TextView
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:id="@+id/judul"
        android:text="MIKO KAMAL"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logomkamal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="#f4b006"
        android:id="@+id/welcome"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Your legal issues will be handled by our professional lawyers and team"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul"
        android:layout_marginTop="5dp"/>

</RelativeLayout>

</RelativeLayout>